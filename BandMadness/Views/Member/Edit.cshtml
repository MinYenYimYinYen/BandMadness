@model BandMadness.Views.Member.ViewModels.MemberEdit

@{
	ViewBag.Title = "Edit";
}

<h2>Edit Member</h2>

@using (Html.BeginForm("Edit", "Member", FormMethod.Post, new { @class = "form-horizontal" }))
{
	@Html.AntiForgeryToken()

	<div class="form-group">
		@Html.HiddenFor(m => m.Member.MemberID)

			<table>
				<tr>
					<th>@Html.LabelFor(m => m.Member.FirstName, new { @class = "control-label col-md-4" })</th>
					<th>@Html.LabelFor(m => m.Member.LastName, new { @class = "control-label col-md-4" })</th>
					<th>@Html.LabelFor(m => m.Member.Alias, new { @class = "control-label col-md-4" })</th>
				</tr>
				<tr>
					<td>@Html.EditorFor(m => m.Member.FirstName, new { @class = "form-control col-md-7" })</td>
					<td>@Html.EditorFor(m => m.Member.LastName, new { @class = "form-control col-md-7" })</td>
					<td>@Html.EditorFor(m => m.Member.Alias, new { @class = "form-control col-md-7" })</td>
				</tr>
			</table>
		<table>
			<tr><th>@Html.LabelFor(m => m.Member.Instruments, new { @class = "control-label" })</th></tr>
			<tr><td>@Html.ListBoxFor(m=>Model.InstrumentIDs,Model.SLInstruments)</td></tr>

		</table>
			<br />





		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Save" class="btn btn-default" />
			</div>
		</div>
	</div>
}
<div>
	@{ Html.RenderPartial("_Delete", Model.Member);}
</div>
<div>
	@Html.ActionLink("Back to List", "Index")
</div>
