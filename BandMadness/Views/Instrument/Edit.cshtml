@model BandMadness.Views.Instrument.ViewModels.InstrumentEdit

@{
	ViewBag.Title = "Edit";
}

<h2>Edit Instrument</h2>

@using (Html.BeginForm("Edit","Instrument", FormMethod.Post,new {@class="form-horizontal"}))
{
	@Html.AntiForgeryToken()

	<div class="form-group">

		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.Instrument.InstrumentID)

		<div class="form-group">
			@Html.LabelFor(model => model.Instrument.Name, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Instrument.Name, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Instrument.Name, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div>@Html.LabelFor(m => m.Instrument.Members, new { @class = "control-label" })</div>
	
			<div>@Html.ListBoxFor(m => m.MemberIDs, Model.SLMembers)</div>

		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Save" class="btn btn-default" />
			</div>
		</div>
	</div>
			}
<div>
	@{ Html.RenderPartial("_Delete", Model.Instrument);}
</div>
<div>
	@Html.ActionLink("Back to List", "Index")
</div>
